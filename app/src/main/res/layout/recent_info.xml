<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_live"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/squads_text_back">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="No Match Now.."
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"></TextView>


        <ImageView
            android:id="@+id/iv_team1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></ImageView>

        <TextView
            android:id="@+id/tv_runs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Score A"
            android:textColor="#FF9800"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_team1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></TextView>
        <TextView
            android:id="@+id/tv_overs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif"
            android:textColor="#FFF"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_team1"
            app:layout_constraintTop_toBottomOf="@+id/tv_runs1"></TextView>

        <TextView
            android:id="@+id/tv_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Team 1"
            android:maxLength="15"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_team1"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>

        <TextView
            android:id="@+id/tv_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="serif"
            android:text="Team 2"
            android:maxLength="15"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_team2"
            app:layout_constraintRight_toRightOf="parent"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:id="@+id/tv_vs"
            android:text="--VS--"
            android:textColor="#F44336"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></TextView>

        <ImageView
            android:id="@+id/iv_team2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></ImageView>

        <TextView
            android:id="@+id/tv_runs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:text="Score B"
            android:textColor="#FF9800"
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@+id/iv_team2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></TextView>


        <TextView
            android:id="@+id/tv_overs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:textColor="#FFF"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/iv_team2"
            app:layout_constraintTop_toBottomOf="@+id/tv_runs2"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="5dp"
            android:id="@+id/tv_matchresult"
            android:textColor="#8BC34A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_team1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>