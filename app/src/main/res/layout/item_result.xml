<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/squads_text_back"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/theme"
        app:cardCornerRadius="5dp"
        app:cardElevation="20dp"
        android:id="@+id/card_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Title"
                android:id="@+id/tv_title"
                android:padding="3dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFF"></TextView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/team1logo"
                android:layout_below="@+id/tv_title"></ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/team2logo"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_title"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Team1"
                android:layout_below="@+id/team1logo"
                android:id="@+id/tv_team1"
                android:padding="3dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFF"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Team2"
                android:layout_below="@+id/team2logo"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_team2"
                android:padding="3dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFF"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Team1Score"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/team1logo"
                android:id="@+id/team1score"
                android:padding="3dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FF9800"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Team2Score"
                android:layout_below="@+id/tv_title"
                android:layout_toLeftOf="@+id/team2logo"
                android:id="@+id/team2score"
                android:padding="3dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FF9800"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:text="VS"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Result"
                android:id="@+id/result"
                android:layout_below="@+id/tv_team1"
                android:padding="3dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:textColor="#FF9800"></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Result"
        android:fontFamily="serif-monospace"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_result"
        android:layout_below="@+id/card_result"
        ></Button>
</RelativeLayout>