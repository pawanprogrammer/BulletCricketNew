<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_live"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/squads_text_back">

        <TextView
            android:id="@+id/tv_league"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="2dp"
            android:text="No Match Now.."
            android:textAlignment="center"
            android:textColor="@color/textcolor"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_league"
            ></TextView>

        <TextView
            android:id="@+id/tv_matchdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textAllCaps="true"
            android:padding="2dp"
            android:text="Match Information"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            ></TextView>




        <ImageView
            android:id="@+id/iv_team1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matchdetails"></ImageView>

        <TextView
            android:id="@+id/tv_runs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Score A"
            android:textColor="#FF9800"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_team1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></TextView>
        <TextView
            android:id="@+id/tv_overs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif"
            android:textColor="#FFF"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_team1"
            app:layout_constraintTop_toBottomOf="@+id/tv_runs1"></TextView>

        <TextView
            android:id="@+id/tv_team1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Team 1"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:padding="3dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/iv_team1"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>

        <TextView
            android:id="@+id/tv_team2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:text="Team 2"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_team2"
            app:layout_constraintRight_toRightOf="parent"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:id="@+id/tv_vs"
            android:text="--VS--"
            android:textColor="#8BC34A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matchdetails"></TextView>

        <ImageView
            android:id="@+id/iv_team2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matchdetails"></ImageView>

        <TextView
            android:id="@+id/tv_runs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:text="Score B"
            android:textColor="#FF9800"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/iv_team2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"></TextView>


        <TextView
            android:id="@+id/tv_overs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:textColor="#FFF"
            android:textSize="12sp"
            app:layout_constraintRight_toLeftOf="@+id/iv_team2"
            app:layout_constraintTop_toBottomOf="@+id/tv_runs2"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="5dp"
            android:text="LIVE"
            android:id="@+id/tv_matchlive"
            android:textColor="#8BC34A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/team1_market"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></TextView>

        <TextView
            android:id="@+id/team1_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:background="@drawable/market_backa"
            android:textSize="10sp"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs"
            app:layout_constraintRight_toLeftOf="@+id/v_mar"
            ></TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs"
            android:layout_marginTop="5dp"
            android:id="@+id/v_mar"
            ></View>
        <TextView
            android:id="@+id/team2_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/market_backb"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vs"
            app:layout_constraintLeft_toRightOf="@+id/v_mar"
            ></TextView>

        <TextView
            android:id="@+id/tv_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Market:"
            android:textColor="#C3C3C1"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_20overs_value"
            app:layout_constraintLeft_toLeftOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/tv_market_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:layout_marginTop="5dp"
            android:text="00-00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_20overs_value"
            app:layout_constraintLeft_toRightOf="@+id/tv_market"
            ></TextView>

        <TextView
            android:id="@+id/tv_20overs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="20 Overs:"
            android:textColor="#C3C3C1"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/tv_20overs_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="00-00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_20overs"
            app:layout_constraintBottom_toBottomOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/tv_market1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="Market:"
            android:layout_marginTop="5dp"
            android:textColor="#C3C3C1"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_20overs_value1"
            app:layout_constraintRight_toLeftOf="@+id/tv_market_value1"
            ></TextView>

        <TextView
            android:id="@+id/tv_market_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="00-00"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_20overs_value1"
            app:layout_constraintRight_toRightOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/tv_20overs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="20 Overs:"
            android:textColor="#C3C3C1"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_20overs_value1"
            ></TextView>

        <TextView
            android:id="@+id/tv_20overs_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:text="00-00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>