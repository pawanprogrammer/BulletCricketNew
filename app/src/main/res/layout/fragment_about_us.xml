<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="10dp"
    tools:context=".Fragment.AboutUsFragment">


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#151515"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_about_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_news"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:textAlignment="viewStart"
                android:text="@string/about_msg1"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#151515"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_about_msg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:text="@string/about_msg2"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>